{##
 # Subscription status controls
 #
 #}
{% if this.subscription.isRestarted() %}
  {{ widget('\\XLite\\View\\Tooltip', text=t('We\'ve received your request to restart this subscription. It will become active again as soon as we charge your credit card associated with it.'), placement='bottom', isImageTag='true', className='help-icon') }}
{% elseif this.subscription.isActive() or this.subscription.isRestartable() %}
  <div class="status-control">
    {% if this.subscription.isActive() %}
      <a href="{{ this.buildUrl('x_payments_subscription', 'stop_subscription', {'subscription_id': this.subscription.id}) }}" class="btn regular-button">Stop</a>
    {% endif %}
  </div>
{% endif %}
