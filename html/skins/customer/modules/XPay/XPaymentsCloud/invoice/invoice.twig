{##
 # X-Payments cards on the invoice
 #
 # @ListChild (list="invoice.bottom.address.billing", weight="30")
 #}
{% if this.order.getXpaymentsCards() %}
    <div class="xpayments-card-box">

      <strong>{{ t('Used credit or debit cards') }}</strong>
      {% for card in this.order.getXpaymentsCards() %}
        {{ widget('\\XLite\\Module\\XPay\\XPaymentsCloud\\View\\Card', card=card, compact=true) }}
        <br />
      {% endfor %}

  </div>
{% endif %}
